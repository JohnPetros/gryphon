{
  "expo": {
    "name": "Gryphon",
    "slug": "gryphon",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./src/assets/images/app-icon.png",
    "scheme": "gryphon",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "splash": {
      "image": "./src/assets/images/app-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#18171F"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.joaopcarvalho.gryphon"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./src/assets/images/adaptive-app-icon.png",
        "backgroundColor": "#18171F"
      },
      "edgeToEdgeEnabled": true,
      "package": "com.joaopcarvalho.gryphon"
    },
    "web": {
      "bundler": "metro",
      "output": "server",
      "favicon": "./src/assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      "expo-web-browser",
      [
        "expo-dev-client",
        {
          "launchMode": "most-recent"
        }
      ],
      [
        "@lovesworking/watermelondb-expo-plugin-sdk-52-plus"
      ],
      [
        "@react-native-google-signin/google-signin",
        {
          "iosUrlScheme": "com.googleusercontent.apps.781507149738-k3l8qjpq0diffm7542m3akgp35qlchk7"
        }
      ],
      [
        "expo-build-properties",
        {
          "android": {
            "packagingOptions": {
              "pickFirst": [
                "**/libc++_shared.so"
              ]
            }
          }
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "router": {},
      "eas": {
        "projectId": "70d835cc-94d0-4457-9a63-30de8de461b6"
      }
    }
  }
}